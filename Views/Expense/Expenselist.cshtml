@model IEnumerable<Expense_Tracker.Models.ExpenseModel>
@{
    ViewBag.Title = "ExpenseList";
}
@{
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}
<div class="container" id="container">
    @Html.Raw(TempData["InsertMessage"])
    @Html.Raw(TempData["UpdateMessage"])

    <h2>Expenses</h2>
    <div class="new">
        <a class="btn" href="/newexpense" role="button">+ New Expense</a>
    </div>
    <div style="width:100%;overflow:auto; max-height:400px;">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Description</th>
                    <th scope="col">Amount</th>
                    <th scope="col">category</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>


            <tbody>
                @{
                    foreach (var item in Model)
                    {
                                <tr>
                                    @*<th scope="row">1</th>*@
                                    <td>@item.Title</td>
                                    <td>@item.Description</td>
                                    <td>@item.Amount</td>
                                    <td>@item.Category</td>
                                    <td>
                                        <a href="/editexpense?id=@item.Expense_Id"> <i class="fa-solid fa-pen"></i></a>&emsp;
                                        <a href="/deleteexpense?id=@item.Expense_Id"><i class="fa-solid fa-trash"></i></a>

                                    </td>
                                </tr>

                    }
                }


            </tbody>
        </table>
    </div>
</div>


