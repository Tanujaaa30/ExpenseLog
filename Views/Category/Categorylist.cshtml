@model IEnumerable<Expense_Tracker.Models.CategoryModel>
@{
    ViewBag.Title = "CategoryList";
}
@{
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}
<div class="container" id="container">
    @Html.Raw(TempData["InsertMessage"])
    @Html.Raw(TempData["UpdateMessage"])
    
    <h2>Categories</h2>
    <div class="new">
        <a class="btn" href="/newcategory" role="button">+ New Category</a>
    </div>
    <div style="width:100%;overflow:auto; max-height:400px;">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Category_Name</th>
                    @*<th scope="col">Amount</th>*@
                    <th scope="col">Limit</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>


            <tbody>
                @{
                    foreach (var item in Model)
                    {
                        <tr>
                            @*<th scope="row">1</th>*@
                            <td>@item.Name</td>
                            @*<td>@item.Amount</td>*@
                            <td>@item.Limit</td>
                            <td>
                                <a href="/editcategory?id=@item.Category_Id"> <i class="fa-solid fa-pen"></i></a>&emsp;
                                <a href="/deletecategory?id=@item.Category_Id"><i class="fa-solid fa-trash"></i></a>

                            </td>
                        </tr>

                    }
                }


            </tbody>
        </table>
    </div>
</div>


